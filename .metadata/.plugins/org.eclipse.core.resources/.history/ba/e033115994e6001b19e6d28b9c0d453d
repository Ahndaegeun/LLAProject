package controller;

import dao.LoginDAO;
import util.LoginSessionUtil;
import util.ScanUtil;
import vo.MemberVO;

public class LoginController {
	private LoginController() {}
	
	private static LoginController intance ;
	
	public static LoginController getLoginController() {
		if(intance == null) {
			intance = new LoginController();
		}
		return intance;
	}
	
	public void login() {
		System.out.print("ID >> ");
		String id = ScanUtil.nextLine();
		System.out.print("PW >> ");
		String pw = ScanUtil.nextLine();
		 
		LoginDAO dao = LoginDAO.getLoginDAO();
		dao.userCheck(new MemberVO(id, pw));
	}
}
