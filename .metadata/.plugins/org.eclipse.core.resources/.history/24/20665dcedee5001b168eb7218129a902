		return 0;
	}
	
	//데미지 받음
	public boolean defMonster() {
		
		return false;
	}
	
	
	//아이템 전송
	public boolean sendItem() {
		return false;
	}
	
	
	//골드 전송
	public boolean sendGold() {
		return false;
	}
}
